<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <Button
        android:id="@+id/parse_userinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="获取SDK用户信息" />

    <Button
        android:id="@+id/parse_usercert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="实名认证" />

    <Button
        android:id="@+id/parse_changeaccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="切换账号" />

    <Button
        android:id="@+id/parse_port"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="调用支付" />

    <Switch
        android:id="@+id/switch_env"
        android:text="测试环境"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_game"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="进入游戏" />

    <EditText
        android:id="@+id/tv_player_id"
        android:hint="请输入角色id"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="红包版本"
            android:id="@+id/radio_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="非红包版本"
            android:id="@+id/radio_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="包体信息" />

    <TextView
        android:id="@+id/tv_info"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>